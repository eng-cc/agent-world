# Viewer defaults (agent_world_viewer)
# AGENT_WORLD_VIEWER_ADDR overrides the CLI address.
AGENT_WORLD_VIEWER_ADDR=127.0.0.1:5010

# Enable headless mode (1 = enabled). Useful in CI or no-display environments.
AGENT_WORLD_VIEWER_HEADLESS=1

# Force offline mode (1 = enabled) to skip network connection attempts.
AGENT_WORLD_VIEWER_OFFLINE=0

# Uncomment to force online even in headless mode.
# AGENT_WORLD_VIEWER_FORCE_ONLINE=1

# LLM (OpenAI-compatible) defaults
# LLM_API_BASE can point to OpenAI or any compatible endpoint.
LLM_API_BASE=https://api.openai.com/v1
LLM_API_KEY=replace-me
LLM_MODEL=gpt-4.1-mini
LLM_TIMEOUT_MS=30000
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.2
LLM_RETRY_MAX=2
